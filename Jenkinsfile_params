pipeline {
    agent any

    parameters {
     choice name: 'MC-name', choices: ['mc-admin', 'mc-alm', 'mc-relam']
     string(name: 'TAG', description: 'TAG')
     string(name: 'HASH', description: 'HASH')
    }

    stages {
        stage('Print Parameters') {
            steps {
                script {
                    echo "Выбраны параметры: ${params.MC-name}, ${TAG}, ${HASH}"
                }
            }
        }
    }
}

